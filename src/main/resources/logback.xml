<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight([%-5level]) [%thread] %logger{36}: %msg%n</pattern>
        </encoder>
    </appender>

    <logger level="debug" name="amaralus.apps.hackandslash"/>
    <logger level="debug" name="amaralus.apps.hackandslash.gameplay.state"/>
    <logger level="debug" name="amaralus.apps.hackandslash.common.message"/>
    <logger level="debug" name="amaralus.apps.hackandslash.io.events"/>
    <logger level="info" name="org.springframework"/>

    <root level="error">
        <appender-ref ref="console"/>
    </root>
</configuration>